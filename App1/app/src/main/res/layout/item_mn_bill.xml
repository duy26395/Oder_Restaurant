<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5sp"
    android:layout_marginTop="8sp"
    app:cardCornerRadius="5sp"
    android:layout_height="40sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="5sp"
        android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/manager_bill_checkbox"/>
            <TextView
            android:layout_width="wrap_content"
            android:text="bill_date"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/manager_bill_checkbox"
            android:layout_marginLeft="10sp"
            android:id="@+id/manager_bill_date"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="khang"
                android:layout_toRightOf="@id/manager_bill_date"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:textSize="20sp"
                android:id="@+id/manager_bill_iduser"/>
            <TextView
            android:layout_width="wrap_content"
            android:text="nvien"
            android:layout_height="wrap_content"
            android:textSize="20sp"
                android:layout_toRightOf="@id/manager_bill_date"
                android:layout_marginLeft="80sp"
            android:id="@+id/manager_bill_idemployess"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>