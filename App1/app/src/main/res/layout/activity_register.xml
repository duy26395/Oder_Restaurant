<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20sp"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <EditText
                android:id="@+id/rgname"
                android:layout_width="match_parent"
                android:background="@drawable/bg_edittext"
                android:layout_height="50sp"
                android:hint="Name" />

            <EditText
                android:id="@+id/rgpass"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_below="@id/rgname"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="@string/password_hint"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/rgemail"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_below="@+id/rgpass"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/rgadress"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_below="@+id/rgemail"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="10dp"
                android:hint="Address" />

            <EditText
                android:id="@+id/rgphone"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_below="@+id/rgadress"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="10dp"
                android:hint="Phone"
                android:inputType="phone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50sp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:text="Register"
                android:background="@drawable/button_login"
                android:textColor="@color/white_trans"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_register"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idtext_btnlogin"
                android:layout_marginTop="10sp"
                android:text="Already have an account"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>