<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="italic"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                android:text="Thêm Khách Hàng"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20sp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:hint="Name"
            android:background="@drawable/bg_edittext"
            android:id="@+id/fg_add_customer_name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Phone"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:id="@+id/fg_add_customer_phone"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="@string/email_hint"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edittext"
            android:id="@+id/fg_add_customer_email"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:textStyle="italic"
            android:hint="Address"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edittext"
            android:id="@+id/fg_add_customer_address"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20sp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/design_button"
                android:id="@+id/fg_add_customer_confirm"
                android:text="Xác Nhận"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"

                android:background="@drawable/design_button"
                android:layout_weight="1"
                android:id="@+id/fg_add_customer_close"
                android:text="Huỷ"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>